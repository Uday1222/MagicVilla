@using MagicVilla_Web.Models.Dto;
@model LoginRequestDTO;

<form method="post" asp-action="Login">
    <div class="container border p-4">
        <div class="row text-center">
            <h1>Login</h1>
        </div>

        <div class="row text-center">
            <div asp-validation-summary="All" class="text-center"></div>
        </div>

        <div class="row">
            <div class="col-6 offset-3 pb-2">
                <input asp-for="UserName" type="text" class="form-control" placeholder="UserName" />
            </div>
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
            </div>
            <div class="col-6 offset-3 pb-2">
                <button type="submit" class="btn btn-primary" class="form-control" value="Submit">Login</button>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}