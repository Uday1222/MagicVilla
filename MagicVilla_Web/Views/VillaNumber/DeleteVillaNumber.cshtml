@using MagicVilla_Web.Models.ViewModels;
@model VillaNumberDeleteViewModel
@*@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}*@
<form asp-controller="VillaNumber" asp-action="DeleteVillaNumber" method="post">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Update Villa</h1>
        <br />

        <div class="row">
            <input hidden asp-for="VillaNumber.VillaNo" />

            <div class="col-2">
                <label asp-for="VillaNumber.VillaID" class="control-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="VillaNumber.VillaID" disabled class="form-select" asp-items="@Model.villaList">
                    <option disabled selected>--Select Villa--</option>
                </select>
            </div>

            <div class="col-2">
                <label asp-for="VillaNumber.VillaNo" class="control-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="VillaNumber.VillaNo" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="VillaNumber.SpecialDetails" readOnly class="control-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="VillaNumber.SpecialDetails" class="form-control"></textarea>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexVillaNumber" class="btn btn-primary form-control">Back to List</a>
            </div>

            <div class="col-5">
                <button class="form-control btn btn-success" type="submit" value="Delete" />Delete
            </div>


        </div>

    </div>
</form>

<script>
    <partial name="_ValidationScriptsPartial" />
</script>


