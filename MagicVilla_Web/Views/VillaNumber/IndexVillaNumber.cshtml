@model IEnumerable<MagicVilla_Web.Models.Dto.VillaNumberDTO>
<br />
<div class="container pd-4 border">
    <div class="row pd-2">
        <div class="col">
            <h1 class="text-primary">Villa Number List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="VillaNumber" asp-action="CreateVillaNumber" class="btn btn-outline-primary"> <i class="bi bi-file-plus"></i>Create New Villa Number</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Villa.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VillaNo)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.SpecialDetails)
                </th>*@
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Villa.Name)
                    </td>
                    <td>
                        @item.VillaNo
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.SpecialDetails)
                    </td>*@
                    <td>
                        <a asp-controller="VillaNumber" asp-action="UpdateVillaNumber" asp-route-villaId="@item.VillaNo" class="btn btn-success">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-controller="VillaNumber" asp-action="DeleteVillaNumber" asp-route-villaId="@item.VillaNo" class="btn btn-danger">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                    @*<td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>*@
                </tr>
            }
        </tbody>
    </table>
</div>
