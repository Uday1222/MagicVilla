@model MagicVilla_Web.Models.Dto.VillaNumberCreateDTO
@*@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}*@
<form asp-controller="VillaNumber" asp-action="CreateVillaNumber" method="post">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Create Villa</h1>
        <br />

        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="col-2">
                <label asp-for="VillaID" class="control-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="VillaID" class="form-control" />
